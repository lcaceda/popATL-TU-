<div class="page-header">
  <%= link_to new_project_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Project
  <% end %>
  <h1>Crowdsourced Projects Wishlist</h1>
  <%= content_tag_for(:tr, @users) do |user| %>
  <h3>"Welcome, " @users.first_name " !" </h3>
  <% end %>
  <h3>Welcome, <%= current_user.first_name -%>!</h3>
</div>

<div class="table-responsive projects">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Inspiration url</th>
            <th>Proposed location</th>
            <th>Proposed date</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @projects) do |project| %>
            <td><%= project.title %></td>
            <td><%= project.description %></td>
            <td> <%=link_to project.inspiration_url, project.inspiration_url %></td>
            <td><%= project.proposed_location %></td>
            <td><%= project.proposed_date %></td>
            <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
