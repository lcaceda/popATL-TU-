<%= form_for(@project, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :inspiration_url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :inspiration_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :proposed_location, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :proposed_location, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :proposed_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :proposed_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
